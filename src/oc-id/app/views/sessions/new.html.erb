<div class="medium-6 columns">
  <h1>Sign In</h1>
  <p>Please sign in with your Chef account.</p>
  <div>
    <%= form_tag(auth_chef_callback_path, :method => :post) do %>
      <%= label_tag 'Username or email' %>
      <%= text_field_tag :username, nil, :autofocus => true, :required => true, :class => 'radius' %>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, :required => true, :class => 'radius' %>
      <div>
        <%= submit_tag "Sign In", class: "button" %>
      </div>
      <div>
        <%= link_to "Forgot your password?", new_password_reset_path %>
      </div>
    <% end %>
  </div>
</div>
